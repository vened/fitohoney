= form_for [:staff, @post] do |f|
  - if @post.errors.any?
    #error_explanation
      h2 = "#{pluralize(@post.errors.count, "error")} prohibited this product from being saved:"
      ul
        - @post.errors.full_messages.each do |message|
          li = message

  .form-group
    = f.label :title, 'Название'
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :photo, 'Фото'
    = f.file_field :photo
  .form-group
    = f.label :prev, 'Первью публикации'
    = f.text_area :prev, class: 'form-control'
  .form-group
    = f.label :body, 'Текст публикации'
    = f.text_area :body, class: 'form-control editor', style: 'height: 350px'
  .form-group
    = f.submit 'Сохранить', class: 'btn btn-success'
